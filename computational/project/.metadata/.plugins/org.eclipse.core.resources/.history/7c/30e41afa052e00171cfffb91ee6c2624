class sliders(object):
	'''
	classdocs
	'''


	def __init__(self, fg, m):
		'''
		Constructor
		'''
		col1 = 0.01
		col2 = 0.6
		self.y =  0.01
		self.x = 0.01
		wid = 0.3
		ht = 0.03
		
		#create bc sliders
		if not m.is2d:
			fig.add_axes([col1,get_y(),wid,ht])
			
	def get_y(self):
		y_temp = self.y
		self.y+=0.05
		return y_temp
	
	def get_x(self):
		x_temp = self.x
		if self.x == 0.01:
			self.x = 0.6
		else:
			self.x = 0.01
		return x_temp