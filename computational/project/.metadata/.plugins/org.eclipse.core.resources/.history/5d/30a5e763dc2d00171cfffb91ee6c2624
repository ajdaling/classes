from matplotlib import animation as anim, pyplot

class MyClass(object):
	'''
	classdocs
	'''


	def __init__(self, dims, **key_params):
		'''
		Constructor
		'''
		#initialize dimension params
		self.x_min = dims[0]
		self.x_max = dims[1]
		if dims.size() == 4:
			self.y_min = dims[2]
			self.y_max = dims[3]
		
		#check if sparse
		if 'sparse' in key_params:
			self.is_sparse = key_params['sparse']
		
		#create necessary members
		self.u = zeros()
		