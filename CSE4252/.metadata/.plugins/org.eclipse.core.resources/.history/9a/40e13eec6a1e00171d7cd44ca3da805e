#include "Game.h"
#include <fstream>
#include <assert.h>
#include <iostream>
#include <cstdlib>
using namespace std;
namespace caps {

Game::Game() {


}

Game::~Game() {
	// TODO Auto-generated destructor stub
}

void Game::startGame(){
	cout << "loading data" << endl;
	loadCaps();
}

void Game::loadCaps(){
	ifstream in;
	string country;
	string capital;
	in.open("capitals.csv");
	assert(in.is_open());
	while(getline(in,country)){
		getline(in,capital);
		caps_vec.push_back(make_pair(country,capital));
	}

}

void Game::prompt(){
	cout << "What is the capital of: ";
	//get random country
	int random_index = rand() % caps_vec.size();

}

} /* namespace caps */
